<div class="messages cleafix col-xs-12">
    <div class="col-sm-9 col-md-9 col-lg-9">
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-block alert-danger clearfix">
                <div class="col-sm-1">
                    <i class="ace-icon fa fa-exclamation-triangle red bigger-200"></i>
                </div>
                <div class="col-sm-10">
                    <h3 class="smaller lighter no-margin-top">{{ flashMessage.header|trans }}</h3>
                    <h4 class="smaller lighter">{{flashMessage.title|trans}}</h4>
                    {{flashMessage.message|trans}}
                </div>
                <div class="col-sm-1">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('warning') %}
            <div class="alert alert-block alert-warning clearfix">
                <div class="col-sm-1">
                    <i class="ace-icon fa fa-bell orange bigger-200"></i>
                </div>
                <div class="col-sm-10">
                    <h3 class="smaller lighter no-margin-top">{{ flashMessage.header|trans }}</h3>
                    <h4 class="smaller lighter">{{flashMessage.title|trans}}</h4>
                    {{flashMessage.message|trans}}
                </div>
                <div class="col-sm-1">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-block alert-success clearfix">
                <div class="col-sm-1">
                    <i class="ace-icon fa fa-check green bigger-200"></i>
                </div>
                <div class="col-sm-10">
                    <h3 class="smaller lighter no-margin-top">{{ flashMessage.header|trans }}</h3>
                    <h4 class="smaller lighter">{{flashMessage.title|trans}}</h4>
                    {{flashMessage.message|trans}}
                </div>
                <div class="col-sm-1">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('message') %}
            <div class="alert alert-info clearfix">
                <div class="col-sm-1">
                    <i class="ace-icon fa fa-info-circle blue bigger-200"></i>
                </div>
                <div class="col-sm-10">
                    <h3 class="smaller lighter no-margin-top">{{ flashMessage.header|trans }}</h3>
                    <h4 class="smaller lighter">{{flashMessage.title|trans}}</h4>
                    {{flashMessage.message|trans}}
                </div>
                <div class="col-sm-1">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>        
        {% endfor %}
    </div>
</div>
